[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
WorkingDirectory=/home/ubuntu/lewifinance_backend
ExecStart=/home/ubuntu/lewifinance_backend/venv/bin/gunicorn \
          --access-logfile logs/access_logs.log \
          --error-logfile logs/error_logs.log \
          --workers 3 \
          --bind unix:/run/gunicorn.sock \
          _project.wsgi:application \
          --preload \
         --capture-output \
         --log-level debug

[Install]
WantedBy=multi-user.target
